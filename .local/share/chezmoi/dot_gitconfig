[user]
	name = ScottS
	email = scott@schlesier.ca
[core]
	excludesfile = $HOME/.gitignore_global
	autocrlf = input
[include]
  path = ~/.git-alias.config
[color]
	ui = true
[push]
	default = upstream
[diff]
    tool = bcomp
[difftool]
    prompt = false
[difftool "bcomp"]
    trustExitCode = true
    cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
[merge]
    tool = bcomp
[mergetool]
    prompt = false
[mergetool "bcomp"]
    trustExitCode = true
    cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
