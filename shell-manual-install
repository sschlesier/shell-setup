#! /usr/bin/env sh

#bombardier
curl --fail --silent --show-error --location \
	--output ~/bin/bombardier https://github.com/codesenberg/bombardier/releases/download/v1.2.5/bombardier-linux-amd64
chmod +x ~/bin/bombardier

#tabulator
curl --fail --silent --show-error --location https://github.com/stefan-schroedl/tabulator/archive/v1.2.1.tar.gz \
	| tar xz --directory="$HOME/bin"

#csvquote
csvsrc=$(mktemp -d)
git clone https://github.com/dbro/csvquote.git "$csvsrc"
curdir=$(pwd)
cd "$csvsrc"
make
mkdir -p "$HOME/bin/csvquote/bin"
cp csvquote csvheader "$HOME/bin/csvquote/bin"
cd "$curdir"
rm -rf "$csvsrc"

#setup defaault ssh config
curl --fail --silent --show-error --location \
	--output ~/.ssh/config https://gist.githubusercontent.com/sschlesier/128b3c59ed82034d2fc983ecabdfb4ea/raw/config
chmod 644 ~/.ssh/config
