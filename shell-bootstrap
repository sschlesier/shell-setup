#! /usr/bin/env sh

if type dnf > /dev/null; then
  dnf -y install \
	ddgr \
	dos2unix \
	entr \
	exa \
	fd-find \
	fzf \
	git \
	hyperfine \
	httpie \
	man \
	neovim \
	npm \
	parallel \
	python \
	python3 \
	ruby \
	the_silver_searcher \
	tmux \
	unzip \
	wget \
	zsh

  dnf -y module install \
	bat

  npm install -g \
	markserv
else
	echo only dnf based systems supported
	exit 1
fi
