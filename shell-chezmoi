curl -sfL https://git.io/chezmoi | sh -s - -b ~/bin
~/bin/chezmoi init https://github.com/sschlesier/dotfiles-chezmoi.git
~/bin/chezmoi apply

~/bin/chezmoi source -- remote remove origin
~/bin/chezmoi source -- remote add origin git@github.com:sschlesier/dotfiles-chezmoi.git

cp ~/.zsh/shell_environment_template ~/.zsh/shell_environment.zsh

#create ~/.ssh so ssh-agent doesn't whine
mkdir -p ~/.ssh
