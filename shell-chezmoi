#! /usr/bin/env sh

chezmoi init https://github.com/sschlesier/dotfiles-chezmoi.git
chezmoi apply

chezmoi source -- remote remove origin
chezmoi source -- remote add origin git@github.com:sschlesier/dotfiles-chezmoi.git
# need ssh keys before fetch and setting upstream
# chezmoi source -- fetch origin
# chezmoi source -- branch --set-upstream-to=origin/master master

cp ~/.zsh/shell_environment_template ~/.zsh/shell_environment.zsh

#create ~/.ssh so ssh-agent doesn't whine
mkdir -p ~/.ssh
